{
  "name": "language-styler",
  "version": "2.0.1",
  "description": "A lightweight JavaScript library to detect and style text in multiple languages using Unicode ranges, with React and TypeScript support.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./text-style": "./dist/text-style.js"
  },
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "language-detection",
    "unicode",
    "text-styling",
    "multilingual",
    "javascript",
    "react",
    "nextjs",
    "typescript"
  ],
  "author": "Eyachir Arafat",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EyachirArafat/language-styler.git"
  },
  "homepage": "https://github.com/EyachirArafat/language-styler",
  "bugs": {
    "url": "https://github.com/EyachirArafat/language-styler/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "rollup": "^4.41.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}

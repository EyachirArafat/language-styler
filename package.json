{
    "name": "@eyachirarafat/language-styler",
    "version": "3.0.0",
    "description": "A high-performance JavaScript library for detecting and styling multilingual text with React and TypeScript support.",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "@eyachirarafat:registry": "https://npm.pkg.github.com"
    },
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./react": {
            "import": "./dist/react.esm.js",
            "require": "./dist/react.js",
            "types": "./dist/react.d.ts"
        },
        "./vanilla": {
            "import": "./dist/vanilla.esm.js",
            "require": "./dist/vanilla.js",
            "types": "./dist/vanilla.d.ts"
        },
        "./styles": "./dist/styles/default.css",
        "./styles/*": "./dist/styles/*",
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "clean": "rimraf dist",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "language-styler",
        "detect-language",
        "detect",
        "language",
        "language-detection",
        "multilingual",
        "react",
        "typescript"
    ],
    "author": "Eyachir Arafat",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/EyachirArafat/language-styler.git"
    },
    "peerDependencies": {
        "react": ">=16.8.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        }
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/react": "^18.3.3",
        "rimraf": "^5.0.10",
        "rollup": "^4.21.0",
        "rollup-plugin-copy": "^3.5.0",
        "tslib": "^2.8.1",
        "typescript": "^5.5.4"
    }
}
